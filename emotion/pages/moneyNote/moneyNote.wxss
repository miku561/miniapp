.money-total{
  padding: 20rpx 0;
  text-align: center;
}
.money-total .word{
  margin-bottom: 10rpx;
  font-size: 32rpx;
}
.money-total .txt{
  font-size: 30rpx;
}
.kind-wrap{
  margin-top: 40rpx;
}
.kind-wrap .item{
  position: relative;
  display: inline-block;
  width: 25%;
  margin-bottom: 80rpx;
  text-align: center;
  }
.kind-wrap .icons,
.inp-wrap .icon-img{
  width: 50rpx;
  height: 50rpx;
}
.kind-wrap .icon-word{
  font-size: 28rpx;
}
.icon-mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background: transparent
}
.inp-item{
  width: 100%;
  height: 30rpx;
  font-size: 38rpx;
}
.inp-wrap{
  margin: 0 auto;
  width: 85%;
}
.inp-wrap .icon-wrap{
  flex: 0 0 100rpx;
  width: 100rpx;
}
.inp-wrap .send-btn{
  flex: 0 0 120rpx;
  width: 120rpx;
  color: #fff;
  font-size: 28rpx;
  background: #666;
}