.detail-wrap{
  margin: 0 auto;
  width: 90%;
}
.index-wrap{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 0 auto 10rpx;
  width: 90%;
}
.index-wrap .flex-item{
  flex: 1;
  text-align: center
}
.index-wrap .flex-item.active{
  color: #000;
  font-weight: bold
}

.date-show{
	position: relative;
	width: 250rpx;
	font-family: PingFang-SC-Regular;
	font-size: 40rpx;
	color: #282828;
	text-align: center;
	margin: 59rpx auto 10rpx;
}
.lt-arrow,.rt-arrow{
	position: absolute;
	top: 8rpx;
	width: 40rpx;
	height: 40rpx;
	background: url(http://7jptey.com1.z0.glb.clouddn.com/Fk-_F4HNXKatptRTypZ5FkK_SMup) 0 0 / 100% 100% no-repeat;
}
.lt-arrow image,.rt-arrow image{
	width: 14rpx;
	height: 26rpx;
}
.lt-arrow{
	left: -110rpx;
}
.rt-arrow{
	right: -100rpx;
	transform: rotate(180deg);
}
.header{
	font-size: 0;
}
.header>view{
	display: inline-block;
	width: 14.285%;
	color: #333;
	font-size: 30rpx;
	text-align: center;
	border-bottom: 1px solid #D0D0D0;
	padding: 39rpx 0;
}
.weekMark{
	position: relative;
}
.weekMark view{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	border-bottom: 1px solid #39c5bb;
}
.date-box{
	font-size: 0;
	padding: 10rpx 0;
}
.date-box>view{
	position: relative;
	display: inline-block;
	width: 14.285%;
	color: #020202;
	font-size: 40rpx;
	text-align: center;
	vertical-align: middle;
	margin: 15rpx 0;
}
.date-head{
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
}
.nowDay .date-head{
	width: 60rpx;
	border-radius: 50%;
	text-align: center;
	color: #fff;
	background-color: #39c5bb;
	margin: 0 auto;
}
.date-weight{
	font-size: 22rpx;
	padding: 15rpx 0;
}
.nowDay .date-weight{
	color: #39c5bb;
}
.one{
	position: absolute;
	bottom: 0;
	right: 5rpx;
	width: 20rpx;
	height: 20rpx;
	border-radius: 50%;
	background-color: red;
}
.two{
	position: absolute;
	bottom: 30rpx;
	right: 5rpx;
	width: 20rpx;
	height: 20rpx;
	border-radius: 50%;
	background-color: blue;
}
.no-content{
  margin: 100rpx 0 0; 
  text-align: center;
  color: #666;
  font-size: 26rpx;
}
.flex-wrap{
  padding: 15rpx 0;
  border-top: 1rpx solid #D0D0D0;
}
.flex-wrap .images{
  margin-right: 50rpx;
  flex: 0 0 120rpx;
  width: 120rpx;
  text-align: center;
  font-size: 32rpx;
}
.flex-wrap .images .imgs{
  width: 100%;
  height: 100rpx;
}
.flex-wrap .date{
  margin-bottom: 25rpx;
  font-size: 28rpx;
}
.flex-wrap .content{
  font-size: 34rpx;
}
.flex-wrap:last-child{
  border-bottom: 1rpx solid #D0D0D0
}